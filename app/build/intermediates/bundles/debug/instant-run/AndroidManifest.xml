<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imcgeek.android.farmss"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.imcgeek.android.farmss.activities.LauncherActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden|adjustPan|adjustNothing" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.imcgeek.android.farmss.activities.LoginActivity"
            android:label="@string/LoginActivityLable" />
        <activity
            android:name="com.imcgeek.android.farmss.activities.RegisterActivity"
            android:label="@string/RegisterActivityLable" />
        <activity
            android:name="com.imcgeek.android.farmss.activities.PlotsizeActivity"
            android:label="@string/PlotsizeActivityLable" />
        <activity
            android:name="com.imcgeek.android.farmss.activities.SoiltestingActivity"
            android:label="@string/SoiltestingActivityLable" />
        <activity
            android:name="com.imcgeek.android.farmss.activities.SoilresultActivity"
            android:label="@string/SoilresultActivityLable" />
        <activity
            android:name="com.imcgeek.android.farmss.activities.CropSelectionActivity"
            android:label="@string/CropSelectionActivityLable" />
        <activity
            android:name="com.imcgeek.android.farmss.activities.RecommendedFurtilizerActivity"
            android:label="@string/RecommendedFurtilizerActivityLable" />
    </application>

</manifest>